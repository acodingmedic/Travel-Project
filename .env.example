# Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
APP_NAME=TravelAI Platform
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# Server Configuration
PORT=8000
FRONTEND_PORT=3000
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB
MONGODB_URI=mongodb://localhost:27017/travelai
MONGODB_TEST_URI=mongodb://localhost:27017/travelai_test
MONGODB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
HASH_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@travelai.com

# Travel APIs
AMADEUS_API_KEY=your-amadeus-api-key
AMADEUS_API_SECRET=your-amadeus-api-secret
AMADEUS_BASE_URL=https://test.api.amadeus.com

SKYSCANNER_API_KEY=your-skyscanner-api-key
SKYSCANNER_BASE_URL=https://partners.api.skyscanner.net

BOOKING_API_KEY=your-booking-api-key
BOOKING_BASE_URL=https://distribution-xml.booking.com

GOOGLE_PLACES_API_KEY=your-google-places-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Weather API
OPENWEATHER_API_KEY=your-openweather-api-key
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# Currency Exchange
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
EXCHANGE_RATE_BASE_URL=https://api.exchangerate-api.com/v4

# =============================================================================
# AI & MACHINE LEARNING
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Alternative AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=TravelAI Platform

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security Headers
HELMET_CSP_DIRECTIVES={"defaultSrc":["'self'"],"styleSrc":["'self'","'unsafe-inline'"],"scriptSrc":["'self'"],"imgSrc":["'self'","data:","https:"]}

# GDPR Compliance
GDPR_ENABLED=true
GDPR_COOKIE_CONSENT_REQUIRED=true
GDPR_DATA_RETENTION_DAYS=365
GDPR_ANONYMIZATION_DELAY_DAYS=30

# =============================================================================
# FILE STORAGE
# =============================================================================

# Local Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=travelai-uploads

# Cloudinary (Optional)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# =============================================================================
# CACHING
# =============================================================================

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_KEYS=1000
CACHE_CHECK_PERIOD=600

# CDN
CDN_URL=https://cdn.travelai.com
CDN_ENABLED=false

# =============================================================================
# QUEUE & BACKGROUND JOBS
# =============================================================================

# Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_DB=1
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000

# Background Job Settings
JOB_CLEANUP_INTERVAL=3600000
JOB_RETENTION_DAYS=7

# =============================================================================
# WEBSOCKET & REAL-TIME
# =============================================================================

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_TRANSPORTS=websocket,polling
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Settings
DEBUG=travelai:*
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs

# Testing
TEST_TIMEOUT=30000
TEST_COVERAGE_THRESHOLD=80
TEST_PARALLEL=true

# Mock Services (for development)
MOCK_EXTERNAL_APIS=false
MOCK_EMAIL_SERVICE=true
MOCK_PAYMENT_SERVICE=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_ADVANCED_SEARCH=true
FEATURE_VOICE_SEARCH=true
FEATURE_REAL_TIME_CHAT=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_PAYMENT_INTEGRATION=false
FEATURE_MOBILE_APP_API=true
FEATURE_ADMIN_DASHBOARD=true
FEATURE_ANALYTICS_DASHBOARD=true

# Experimental Features
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_PREDICTIVE_PRICING=false
FEATURE_BLOCKCHAIN_VERIFICATION=false

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================

# Docker Configuration
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_TAG=latest

# Kubernetes
KUBERNETES_NAMESPACE=travelai
KUBERNETES_SERVICE_ACCOUNT=travelai-service

# Health Checks
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=30000
SHUTDOWN_SIGNALS=SIGTERM,SIGINT

# =============================================================================
# LOCALIZATION
# =============================================================================

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh
DEFAULT_TIMEZONE=UTC
DEFAULT_CURRENCY=USD

# =============================================================================
# BUSINESS LOGIC
# =============================================================================

# Search Configuration
SEARCH_RESULTS_LIMIT=50
SEARCH_TIMEOUT=30000
SEARCH_CACHE_TTL=1800

# Booking Configuration
BOOKING_TIMEOUT=300000
BOOKING_CONFIRMATION_TTL=1800
BOOKING_CANCELLATION_WINDOW=86400

# Pricing
PRICE_UPDATE_INTERVAL=300000
PRICE_ALERT_THRESHOLD=0.1
CURRENCY_UPDATE_INTERVAL=3600000

# User Preferences
USER_SESSION_TIMEOUT=3600000
USER_PREFERENCE_CACHE_TTL=86400
USER_ACTIVITY_LOG_RETENTION=30

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# Data Protection
DATA_ENCRYPTION_AT_REST=true
DATA_ENCRYPTION_IN_TRANSIT=true
DATA_BACKUP_RETENTION_DAYS=90
DATA_AUDIT_LOG_RETENTION_DAYS=365

# Privacy
PRIVACY_POLICY_VERSION=1.0
TERMS_OF_SERVICE_VERSION=1.0
COOKIE_POLICY_VERSION=1.0

# Compliance Reporting
COMPLIANCE_REPORT_INTERVAL=86400000
COMPLIANCE_ALERT_EMAIL=compliance@travelai.com

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add your custom environment variables here
# CUSTOM_FEATURE_FLAG=true
# CUSTOM_API_ENDPOINT=https://api.example.com
# CUSTOM_SECRET_KEY=your-custom-secret